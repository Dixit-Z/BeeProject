  <body>

    <nav class="top-bar">
        <div class="row">
        <div class="col-sm-6 hidden-xs">

            <span class="nav-text">
                <i class="fa fa-phone" aria-hidden="true"></i>  {{ numero_telephone_portable }}
                <i class="fa fa-envelope" aria-hidden="true"></i> {{ adresse_email }}</span>
        </div>
        <div class="col-sm-6 text-right">
            <a target="_blank" href="{{ facebook_url }}" class="social"><i class="fa fa-facebook" aria-hidden="true"></i></a>
            <a target="_blank" href="{{ twitter_url }}" class="social"><i class="fa fa-twitter" aria-hidden="true"></i></a>
            <a target="_blank" href="{{ instagram_url }}" class="social"><i class="fa fa-instagram" aria-hidden="true"></i></a>
