            <a target="_blank" href="{{ google_url }}" class="social"><i class="fa fa-google" aria-hidden="true"></i></a>
            </div>
      </div>
    </nav>

    <nav class="navbar navbar-inverse" data-spy="affix" data-offset-top="197">
      <ul class="nav navbar-nav">
        <li class="{% if app.request.attributes.get('_route') == 'mainPage' %}active{% endif %}"><a href="{{ path('mainPage') }}">Adopte une ruche normande</a></li>
        <li class="{% if app.request.attributes.get('_route') == 'concept' %}active{% endif %}"><a href="{{ path('concept') }}">Le concept</a></li>
        <li class="{% if app.request.attributes.get('_route') == 'adopt' %}active{% endif %}"><a href="{{ path('adopt') }}">Adoptez votre ruche</a></li>
