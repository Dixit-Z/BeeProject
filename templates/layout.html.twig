              <a target="_blank" href="{{ instagram_url }}" class="social"><i class="fa fa-instagram" aria-hidden="true"></i></a>
              <a target="_blank" href="{{ youtube_url }}" class="social"><i class="fa fa-youtube-play" aria-hidden="true"></i></a>
